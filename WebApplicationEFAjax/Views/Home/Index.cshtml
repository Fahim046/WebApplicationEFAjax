@model List<WebApplicationEFAjax.Models.Person>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">

    <h1>ASP.NET EF Workshop</h1>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="row">

            <div class="col-md-4">
                <b>First Name</b>
            </div>

            <div class="col-md-4">
                <b>Last Name</b>
            </div>

            <div class="col-md-4">
                <b>Age</b>
            </div>

        </div>


        @foreach (WebApplicationEFAjax.Models.Person item in Model)
        {
          <div class="row" id="@("PersonId" + item.Id)">

            <div class="col-md-4">
               @Html.DisplayFor(ModelItem => item.FirstName)
            </div>

            <div class="col-md-4">
                @Html.DisplayFor(ModelItem => item.LastName)
            </div>

            <div class="col-md-2">
                @Html.DisplayFor(ModelItem => item.Age)
            </div>

              <div class=" col-md-2">
                  @Ajax.ActionLink("Show Details", "PersonDetails",new {id = item.Id },
                  new AjaxOptions
                  {
                      UpdateTargetId ="PersonId" + item.Id,
                      InsertionMode = InsertionMode.Replace
                  }
                  )
              </div>
          </div>
         }

    </div>
</div>